<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:id="loginPane" prefHeight="500" prefWidth="320" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
    <fx:define>
        <ToggleGroup fx:id="toggle"/>
    </fx:define>
    <Label fx:id="topImg" layoutX="160" layoutY="10"/>
    <Label fx:id="top" text="Login" prefWidth="80" layoutY="110" layoutX="140" style="-fx-font-size: 20; -fx-font-weight: 800"/>
    <GridPane prefWidth="250" layoutX="50" layoutY="180" hgap="10" vgap="15">
        <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="user" promptText="Username" id="srchF" GridPane.columnIndex="1" GridPane.rowIndex="0" focusTraversable="false"/>
        <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="pass" promptText="Password" id="srchF" GridPane.columnIndex="1" GridPane.rowIndex="1" focusTraversable="false"/>
    </GridPane>
    <Button fx:id="log" text="Login" id="srchB" prefWidth="80" layoutY="360" layoutX="185"/>
    <Label fx:id="errMsg" text="Invalid Username or Password" style="-fx-font-size: 14; -fx-font-weight: 600; -fx-text-fill: #ff0000" layoutX="75" layoutY="390"/>
    <Label fx:id="ConfMsg" text="Authenticated" style="-fx-font-size: 14; -fx-font-weight: 600; -fx-text-fill: #ff0000" layoutX="105" layoutY="390"/>



</AnchorPane>